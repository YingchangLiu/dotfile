#!/bin/zsh
local 0=${(%):-%N}

$0() {
  typeset -gH curcontext=${WIDGET}:::

  local +h -a comppostfuncs=( ${(%):-%N}.post "$comppostfuncs[@]" )
  compstate[old_list]=
  autocomplete:_main_complete:new _autocomplete.history_lines

  unset curcontext
  (( _lastcomp[nmatches] ))
}

$0.post() {
  compstate[insert]='menu:0'
}

$0 "$@"
